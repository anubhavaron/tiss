<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.tis.login_signup"
    android:orientation="vertical"
    android:background="@drawable/im">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="WELCOME LOGIN HERE"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="70dp"

        />
    <RadioGroup


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radiogroup"
        android:layout_marginTop="10dp"
        android:gravity="center"


        >


        <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Head"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Teacher"
            android:textColor="#000000"
            android:buttonTint="#000000"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="Student"
            android:buttonTint="#000000"
            android:textColor="#000000"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parent"
            android:buttonTint="#000000"
            android:textColor="#000000"/>
    </RadioGroup>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textSize="25dp"
        android:hint="Enter USERNAME Here"
        android:id="@+id/username_2"/>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textSize="25dp"
        android:hint="Enter PASSWORD Here"
        android:id="@+id/password_2"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="LOGIN"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:id="@+id/login_2"
        android:onClick="LOGIN"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginLeft="90dp"
        android:id="@+id/change_password_2"
        />





</LinearLayout>
